---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {% assign authors = site.data.authors %}
    {% if page.authors %}
      <p>
        by
        {% assign author_count = page.authors.size %}
        {% assign before_last_author = author_count | minus: 1 %}
        {% for author_id in page.authors %}
          {% assign author = authors[author_id] %}
          {{- author.name -}}
          {% if author.orcid %}
            <a href="https://orcid.org/{{ author.orcid }}"><i class="fa-brands fa-orcid"></i></a>
          {%- endif -%}
          {% if forloop.index0 < before_last_author and author_count > 2 -%}
            ,
          {% endif %}
          {% if forloop.index == before_last_author and author_count > 1 -%}
            and
          {% endif %}
        {% endfor %}
      </p>
    {% endif %}

    {% if page.conference_name %}
      {% assign is_published = page.published | default: true %}
      <p>
        {% if is_published == false %}
          To be published at the
        {% else %}
          Published at the
        {% endif %}
        {% if page.conference_url %}
          <a href="{{ page.conference_url }}">{{ page.conference_name }}</a>
        {% else %}
          {{ page.conference_name }}
        {% endif %}
      </p>
    {% endif %}

    {% if page.additional_presentations %}
      <p>
        Also presented at
        {% for pres in page.additional_presentations %}
          {% if pres.url %}
            <a href="{{ pres.url }}">{{ pres.name }}</a>
          {% else %}
            {{ pres.name }}
          {% endif %}
          {% unless forloop.last %}; {% endunless %}
        {% endfor %}
      </p>
    {% endif %}
    {{ content }}

    {% if page.links %}
      {% if page.links.paper or page.links.replication %}
        <style>
          .links-block {
            margin-top: 2rem;
          }
          .links-block h2 {
            margin-bottom: 0.75rem;
          }
          .links-list {
            list-style: none;
            padding-left: 0;
            margin: 0;
          }
          .links-list li {
            margin: 0.5rem 0;
            line-height: 1.6;
          }
          .links-list li i {
            margin-right: 8px;
            width: 20px;
            text-align: center;
          }
        </style>
        <div class="links-block">
          <h2>Links</h2>
          <ul class="links-list">
            {% if page.links.paper %}
              {% assign paper_links = '' %}
              {% assign paper_sep = '' %}
              {% if page.links.paper.ieee %}
                {% assign paper_links = paper_links
                  | append: paper_sep
                  | append: '<a href="'
                  | append: page.links.paper.ieee
                  | append: '">IEEE Xplore</a>'
                %}
                {% assign paper_sep = ' · ' %}
              {% endif %}
              {% if page.links.paper.acm %}
                {% assign paper_links = paper_links
                  | append: paper_sep
                  | append: '<a href="'
                  | append: page.links.paper.acm
                  | append: '">ACM Digital Library</a>'
                %}
                {% assign paper_sep = ' · ' %}
              {% endif %}
              {% if page.links.paper.springer %}
                {% assign paper_links = paper_links
                  | append: paper_sep
                  | append: '<a href="'
                  | append: page.links.paper.springer
                  | append: '">SpringerLink</a>'
                %}
                {% assign paper_sep = ' · ' %}
              {% endif %}
              {% if page.links.paper.kitopen %}
                {% assign paper_links = paper_links
                  | append: paper_sep
                  | append: '<a href="'
                  | append: page.links.paper.kitopen
                  | append: '">KITopen</a>'
                %}
                {% assign paper_sep = ' · ' %}
              {% endif %}
              {% if paper_links != '' %}
                <li>
                  <i class="fa-solid fa-file-lines"></i>
                  <strong>Paper:</strong>
                  {{ paper_links | strip }}
                </li>
              {% endif %}
            {% endif %}

            {% if page.links.replication %}
              {% assign replication_links = '' %}
              {% assign replication_sep = '' %}
              {% if page.links.replication.zenodo %}
                {% assign replication_links = replication_links
                  | append: replication_sep
                  | append: '<a href="'
                  | append: page.links.replication.zenodo
                  | append: '">Zenodo</a>'
                %}
                {% assign replication_sep = ' · ' %}
              {% endif %}
              {% if page.links.replication.repo %}
                {% assign replication_links = replication_links
                  | append: replication_sep
                  | append: '<a href="'
                  | append: page.links.replication.repo
                  | append: '">GitHub</a>'
                %}
                {% assign replication_sep = ' · ' %}
              {% endif %}
              {% if replication_links != '' %}
                <li>
                  <i class="fa-solid fa-box-archive"></i>
                  <strong>Replication Package:</strong>
                  {{ replication_links | strip }}
                </li>
              {% endif %}
            {% endif %}

            {% if page.links.slides %}
              {% assign slide_links = '' %}
              {% assign slide_sep = '' %}
              {% for slide in page.links.slides %}
                {% assign key = slide[0] %}
                {% assign key_down = key | downcase %}
                {% if key_down contains 'pptx' %}
                  {% assign label = 'PPTX' %}
                {% elsif key_down contains 'pdf' %}
                  {% assign version = key_down | replace: '_pdf', '' | replace: 'pdf', '' | replace: '_', ' ' | strip | upcase %}
                  {% if version == '' %}
                    {% assign label = 'PDF' %}
                  {% else %}
                    {% assign label = 'PDF (' | append: version | append: ')' %}
                  {% endif %}
                {% else %}
                  {% assign label = key | replace: '_', ' ' | upcase %}
                {% endif %}
                {% assign slide_links = slide_links
                  | append: slide_sep
                  | append: '<a href="'
                  | append: slide[1]
                  | append: '">'
                  | append: label
                  | append: '</a>'
                %}
                {% assign slide_sep = ' / ' %}
              {% endfor %}
              {% if slide_links != '' %}
                <li>
                  <i class="fa-solid fa-person-chalkboard"></i>
                  <strong>Slides:</strong>
                  {{ slide_links | strip }}
                </li>
              {% endif %}
            {% endif %}
          </ul>
        </div>
      {% endif %}
    {% endif %}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if page.publication %}
    <style>
      .publications {
        margin-top: 0px !important;
      }
    </style>
    <h2>Cite this paper</h2>
    <div class="publications">
      {% bibliography -q @*[key ^= {{page.publication}}] --group_by none %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
