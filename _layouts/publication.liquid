---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {% assign authors = site.data.authors %}
    {% if page.authors %}
      <p>
        by
        {% assign author_count = page.authors.size %}
        {% assign before_last_author = author_count | minus: 1 %}
        {% for author_id in page.authors %}
          {% assign author = authors[author_id] %}
          {{- author.name -}}
          {% if author.orcid %}
            <a href="https://orcid.org/{{ author.orcid }}"><i class="fa-brands fa-orcid"></i></a>
          {%- endif -%}
          {% if forloop.index0 < before_last_author and author_count > 2 -%}
            ,
          {% endif %}
          {% if forloop.index == before_last_author and author_count > 1 -%}
            and
          {% endif %}
        {% endfor %}
      </p>
    {% endif %}
    {{ content }}

    {% if page.links %}
      {% if page.links.paper or page.links.replication %}
        <style>
          .links-block {
            margin-top: 2rem;
          }
          .links-block h2 {
            margin-bottom: 0.75rem;
          }
          .links-aligned {
            list-style: none;
            padding-left: 0;
            margin: 0;
          }
          .links-aligned li {
            display: flex;
            gap: 12px;
            align-items: flex-start;
            margin: 0.25rem 0;
          }
          .links-aligned .label {
            min-width: 190px;
            font-weight: 600;
          }
          .links-aligned .value a {
            white-space: nowrap;
          }
        </style>
        <div class="links-block">
          <h2>Links</h2>
          <ul class="links-aligned">
            {% if page.links.paper and (page.links.paper.kitopen or page.links.paper.ieee or page.links.paper.acm or page.links.paper.springer or page.links.paper.xplore or page.links.paper.acmdl) %}
              <li>
                <span class="label">Paper</span>
                <span class="value">
                  {% assign conj = page.links.paper.conjunction | default: 'and' %}
                  {% assign printed = false %}

                  {% if page.links.paper.ieee or page.links.paper.xplore -%}
                    {%- if printed %} {{ conj }} {% endif -%}
                    <a href="{{ page.links.paper.ieee | default: page.links.paper.xplore }}">IEEE Xplore</a>{% assign printed = true -%}
                  {%- endif %}
                  {% if page.links.paper.acm or page.links.paper.acmdl -%}
                    {%- if printed %} {{ conj }} {% endif -%}
                    <a href="{{ page.links.paper.acm | default: page.links.paper.acmdl }}">ACM Digital Library</a>{% assign printed = true -%}
                  {%- endif %}
                  {% if page.links.paper.springer -%}
                    {%- if printed %} {{ conj }} {% endif -%}
                    <a href="{{ page.links.paper.springer }}">SpringerLink</a>{% assign printed = true -%}
                  {%- endif %}
                  {% if page.links.paper.kitopen -%}
                    {%- if printed %} {{ conj }} {% endif -%}
                    <a href="{{ page.links.paper.kitopen }}">KITopen</a>{% assign printed = true -%}
                  {%- endif %}
                </span>
              </li>
            {% endif %}
            {% if page.links.replication and (page.links.replication.zenodo or page.links.replication.repo) %}
              <li>
                <span class="label">Replication Package</span>
                <span class="value">
                  {% if page.links.replication.zenodo -%}
                    <a href="{{ page.links.replication.zenodo }}">Zenodo</a>
                  {%- endif %}
                  {% if page.links.replication.zenodo and page.links.replication.repo %} and the corresponding {% endif %}
                  {% if page.links.replication.repo -%}
                    <a href="{{ page.links.replication.repo }}">GitHub repository</a>
                  {%- endif %}
                </span>
              </li>
            {% endif %}
          </ul>
        </div>
      {% elsif page.links.items %}
        {% capture links_md %}
      ## Links

{% for item in page.links.items %}
- {{ item.text }}
{% endfor %}
        {% endcapture %}
        {{ links_md | markdownify }}
      {% endif %}
    {% endif %}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if page.publication %}
    <style>
      .publications {
        margin-top: 0px !important;
      }
    </style>
    <h2>Cite this paper</h2>
    <div class="publications">
      {% bibliography -q @*[key ^= {{page.publication}}] --group_by none %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
